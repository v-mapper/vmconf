#!/system/bin/sh
# version 2.1

#Create logfile
if [ ! -e /sdcard/vm.log ] ;then
    touch /sdcard/vm.log
fi
echo "" >> /sdcard/vm.log
echo "`date +%Y-%m-%d_%T` Device rebooted" >> /sdcard/vm.log

# execute vmapper.sh
if [ -f /sdcard/disableautovmapperupdate ] ; then
  sh -x /system/bin/vmapper.sh
else
  sh -x /system/bin/vmapper.sh -ua
fi

